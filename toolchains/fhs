$(DEST)/bin/%: bin/%
	$(INSTALL) -D $<.$($*_VERSION) $@.$($*_VERSION)
	$(SYMLINK) -f $*.$($*_VERSION) $@

$(DEST)/$(LIBDIR)/lib%.a: lib/lib%.a
	$(INSTALL) -D $<.$($*_VERSION) $@.$($*_VERSION)
	$(SYMLINK) -f $*.$($*_VERSION) $@

$(DEST)/$(LIBDIR)/lib%.so: lib/lib%.so
	$(INSTALL) -D $<.$($*_VERSION) $@.$($*_VERSION)
	$(SYMLINK) -f $*.$($*_VERSION) $@

$(DESTINCLUDE)/%: include/%
	$(INSTALL) -D -m 0644 $< $@

$(DESTSHARE)/%: share/%
	$(INSTALL) -D -m 0644 $< $@
