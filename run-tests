#/bin/sh

rm -f temporary*

failed=0;
tests=0;

for i in $(find ./tests ! \( -type d -o \( -name '*.c' -o -name '*.o' \) \) ); do
    let "tests += 1";

    if $i; then
        echo $i;
    else
        echo "failed: $i (code $?)";
        let "failed += 1";
    fi
done

rm -f temporary* 

echo "$tests tests, $failed failed";
