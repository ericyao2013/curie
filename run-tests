#/bin/sh

rm -f temporary*

failed=0;
tests=0;

for i in $(find ./tests ! \( -type d -o \( -name '*.c' -o -name '*.o' \) \) ); do
    let "tests += 1";
    echo $i;

    if $i; then t=1;
    else
        echo " * $i failed (code $?)";
        let "failed += 1";
    fi
done

rm -f temporary* 

echo "$tests tests, $failed failed";
