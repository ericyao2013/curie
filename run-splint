#!/bin/sh

splint_params='-Iinclude'
splint_params_posix='+posixstrictlib'
splint_params_atomic='+nolib'

splint ${splint_params} ${splint_params_atomic} $(find . \( -name "*.c" -o -name "*.h" \) -a \! \( -wholename "./src/generic/atom.c" -o -wholename "./include/atomic/nucleus-posix.h" \))
splint ${splint_params} ${splint_params_posix} src/generic/atom.c include/atom/nucleus-posix.h
