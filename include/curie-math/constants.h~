/*! \file
  \brief Mathematical and other constants
  
  This file contains mathematical constants (pi, e and the like) and some error constants */
#ifndef LIBCURIE_MATH_CONSTANTS_H
  #define LIBCURIE_MATH_CONSTANTS_H
  
  
  #define MATH_PI 3.14159265358979323 // pi
  #define MATH_E 2.71828182845904523 // e
  
  #define INFINITY 1e+37
  #define NEGINFINITY -1e+37
  
  #define ERROR_UNDEFINED -1
  
#endif